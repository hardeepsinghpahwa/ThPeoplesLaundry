<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.hardeep.myproject.user.editpassword">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:text="Enter the old password"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:text="Enter the new password"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="220dp"
        android:textSize="20dp"
        android:text="Re-enter the new password"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittextview"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="60dp"
        android:id="@+id/oldpass"
        android:inputType="textPassword"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittextview"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="160dp"
        android:id="@+id/newpass"
        android:inputType="textPassword"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittextview"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="260dp"
        android:id="@+id/renewpass"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/chngpass"
        android:textColor="@android:color/white"
        android:text="Change Password"
        android:background="@drawable/buttonview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        />


</RelativeLayout>
