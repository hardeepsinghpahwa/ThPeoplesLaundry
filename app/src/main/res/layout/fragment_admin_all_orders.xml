<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.hardeep.myproject.admin.fragments.admin_all_orders">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/edittextview"
            android:id="@+id/search_text_id"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="265dp"
            android:text="Search"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/buttonview"
            android:id="@+id/search_button_id"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ordersrecyclerview"
        android:padding="10dp"
        android:layout_marginTop="60dp">

    </android.support.v7.widget.RecyclerView>

    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:menu_colorNormal="@color/colorPrimary"
        android:id="@+id/fabmenu"
        app:menu_colorPressed="@color/colorPrimary"
        app:menu_labels_colorNormal="@color/colorPrimary"
        app:menu_openDirection="up"
        app:menu_fab_size="normal">

        <com.github.clans.fab.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fabadd"
            android:scaleType="centerCrop"
            app:rippleColor="@color/colorPrimary"
            app:fabSize="mini"
            app:fab_label="Add order"
            android:src="@drawable/orderrem"
            />

        <com.github.clans.fab.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fabremov"
            app:fab_label="Remove order"
            app:fabSize="mini"
            app:rippleColor="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:src="@drawable/order11"
            />

    </com.github.clans.fab.FloatingActionMenu>


</FrameLayout>
